<link rel="stylesheet" href="{{ 'register.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="register_form_container">
  <h2 class="text-center">CREATE ACCOUNT</h2>
  <div class="customer-register-form flex column align-center justify-center">
    {% form 'create_customer', return_to: routes.account_login_url %}
      {{ form.errors | default_errors }}

      <div class="first-name">
        <input class="first_name" type="text" name="customer[first_name]" placeholder="First name">
      </div>

      <div class="last-name">
        <input class="last_name" type="text" name="customer[last_name]" placeholder="Last name">
      </div>

      <div class="email">
        <input class="email" type="email" name="customer[email]" placeholder="Email">
      </div>

      <div class="password">
        <input class="password" type="password" name="customer[password]" placeholder="Password">
      </div>

      <div class="submit">
        <input class="craete_account_button" type="submit" value="Create">
      </div>

      <div>
        <a href="{{ routes.account_login_url }}"><button class="login_button">Login</button></a>
      </div>
    {% endform %}
  </div>
</div>

{% style %}
{% endstyle %}

{% schema %}
{
  "name": "Register Page Section",
  "tag" : "section",
  "settings": []
}
{% endschema %}
